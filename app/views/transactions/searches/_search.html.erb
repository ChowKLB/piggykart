<%= render partial: "transactions/searches/form", locals: { q: q } %>

<div id="transaction-search-filters" class="flex items-center flex-wrap gap-2">
  <% q.conditions.each do |condition| %>
    <% condition.values.each do |value| %>
      <%= render partial: "transactions/searches/filters/badge", locals: { filter_key: condition.key, filter_value: value.value } %>
    <% end %>
  <% end %>
</div>
