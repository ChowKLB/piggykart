<div class="hidden md:-mt-px md:flex">
  <% if pagy.prev %>
    <div>
      <a href="<%= pagy_url_for(pagy, pagy.prev) %>" class="inline-flex items-center  px-3 py-3 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
        <%= lucide_icon("chevron-left", class: "w-5 h-5 text-gray-500") %>
      </a>
    </div>
  <% end %>
  <div class="bg-gray-25 rounded-xl">
    <% pagy.series.each do |series_item| %>
      <% if series_item.is_a?(Integer) %>
        <a href="<%= pagy_url_for(pagy, series_item) %>" class="inline-flex items-center  px-3 py-3 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"><%= series_item %></a>
      <% elsif series_item.is_a?(String) %>
        <a href="<%= pagy_url_for(pagy, series_item) %>" class="shadow-lg ring-2 ring-inset ring-gray-200 rounded-xl bg-white inline-flex items-center m-1 px-4 py-2 text-sm font-medium text-gray-900"><%= series_item %></a>
      <% elsif series_item == :gap %>
        <span class="inline-flex items-center  px-3 py-3 text-sm font-medium text-gray-500">...</span>
      <% end %>
    <% end %>
  </div>
  <% if pagy.next %>
    <div>
      <a href="<%= pagy_url_for(pagy, pagy.next) %>" class="inline-flex items-center  px-3 py-3 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
        <%= lucide_icon("chevron-right", class: "w-5 h-5 text-gray-500") %>
      </a>
    </div>
  <% end %>
</div>