<%= content_tag :div, id: dom_id(transaction), class: "grid grid-cols-12 items-center text-gray-900 py-4 text-sm font-medium px-4" do %>
  <div class="col-span-4">
    <%= render "name", transaction: transaction %>
  </div>

  <div class="col-span-3">
    <%= render "transactions/categories/menu", transaction: transaction %>
  </div>

  <%= link_to transaction.account.name,
              account_path(transaction.account),
              class: ["col-span-3 hover:underline"] %>

  <%= content_tag :p,
                  format_money(transaction.amount_money),
                  class: ["col-span-2 ml-auto", "text-green-600": transaction.amount.negative?] %>
<% end %>
