<% content_for :sidebar do %>
  <%= render "settings/nav" %>
<% end %>
<div class="space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="text-xl font-medium text-gray-900">Merchants</h1>
    <%= link_to new_transactions_merchant_path, class: "flex text-white text-sm font-medium items-center gap-1 bg-gray-900 rounded-lg p-2", data: { turbo_frame: "modal" } do %>
      <%= lucide_icon("plus", class: "w-5 h-5") %>
      <span><%= t(".new_merchant") %></span>
    <% end %>
  </div>
  <div class="bg-white shadow-xs border border-alpha-black-25 rounded-xl p-4">
    <div class="flex justify-center items-center py-20">
      <% if @merchants.empty? %>
        <div class="flex justify-center items-center h-[800px] text-sm">
          <div class="text-center flex flex-col items-center max-w-[300px]">
            <p class="text-gray-900 mb-1 font-medium">No merchants yet</p>
            <%= link_to new_transactions_merchant_path, class: "w-fit flex text-white text-sm font-medium items-center gap-1 bg-gray-900 rounded-lg p-2", data: { turbo_frame: "modal" } do %>
              <%= lucide_icon("plus", class: "w-5 h-5") %>
              <span><%= t(".new_merchant") %></span>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="bg-gray-25 p-1 rounded-xl">
          <div class="flex items-center px-4 py-2 text-xs font-medium text-gray-500">
            <p>Merchants</p>
            <span class="text-gray-400 mx-2">&middot;</span>
            <p><%= @merchants.count %></p>
          </div>

          <% @merchants.each do |merchant| %>
            <div class="bg-white">
              <div class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-600/5 text-gray-600">
                <%= merchant.name[0].upcase %>
              </div>
              <p class="text-gray-900 group-hover:underline group-hover:text-gray-800 truncate">
                <%= merchant.name %>
              </p>
              <div class="relative cursor-pointer" data-controller="menu">
                <button data-menu-target="button" class="flex hover:bg-gray-100 p-2 rounded">
                  <%= lucide_icon("more-horizontal", class: "w-5 h-5 text-gray-500") %>
                </button>
                <div data-menu-target="content" class="absolute z-10 top-10 right-0 border border-alpha-black-25 bg-white rounded-lg shadow-xs hidden">
                  <div class="w-48 px-3 text-sm leading-6 text-gray-900 bg-white shadow-lg shrink rounded-xl ring-1 ring-gray-900/5">
                    <%= button_to edit_transactions_merchant_path(merchant),
                                  method: :get,
                                  class: "block w-full py-2 flex items-center",
                                  data: { turbo_frame: "modal" } do
                    %>
                      <%= lucide_icon("pencil-line", class: "w-5 h-5 mr-2") %> Edit merchant
                    <% end %>
                  </div>
                  <div class="w-48 px-3 text-sm leading-6 text-gray-900 bg-white shadow-lg shrink rounded-xl ring-1 ring-gray-900/5">
                    <%= button_to transactions_merchant_path(merchant),
                                  method: :delete,
                                  class: "block w-full py-2 text-red-600 hover:text-red-800 flex items-center",
                                  data: {
                                    turbo_confirm: {
                                      title: t(".confirm_title"),
                                      body: t(".confirm_body_html"),
                                      accept: t(".confirm_accept", name: merchant.name)
                                    }
                                  } do %>
                      <%= lucide_icon("trash-2", class: "w-5 h-5 mr-2") %> Delete merchant
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
  <div class="flex justify-between gap-4">
    <%= previous_setting("Categories", transactions_categories_path) %>
    <%= next_setting("Rules", transactions_rules_path) %>
  </div>
</div>
