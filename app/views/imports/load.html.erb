<%= content_for :return_to_path, return_to_path(params, imports_path) %>

<%= content_for :nav do %>
  <%= render "imports/nav", import: @import %>
<% end %>

<div>
  <h1 class="sr-only">Load import</h1>

  <%= form_with model: @import, url: load_import_path(@import), method: :post do |form| %>
    <div class="mb-4">
      <%= form.text_area :raw_csv, label: "CSV", value: @import.raw_csv, required: true %>
    </div>

    <%= form.submit t(".next"), class: "px-4 py-2 block w-full rounded-lg bg-gray-900 text-white text-sm font-medium" %>
  <% end %>
</div>
