<%= turbo_stream.flash_message(flash) %>
<div id="flash-messages" class="fixed top-4 right-4 space-y-2">
  <template>
    <div data-controller='flash' data-action='click->flash#dismiss' class="border shadow-sm p-4 rounded-xl flex max-w-80 bg-white transition cursor-pointer z-50">
      <div>
        <% icon_classes = "size-5 text-white bg-green-500 rounded-full p-1 mt-0.5 hidden" %>
        <%= lucide_icon "check", "data-flash-target": "noticeIcon", class: class_names(icon_classes, 'bg-green-500') %>
        <%= lucide_icon "x", "data-flash-target": "alertIcon", class: class_names(icon_classes, 'bg-red-500') %>
      </div>
      <p data-flash-target='message' class="px-3 top-"></p>
      <div>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" class="size-5">
          <path d="M18 10C18 14.4183 14.4183 18 10 18C5.58172 18 2 14.4183 2 10C2 5.58172 5.58172 2 10 2C14.4183 2 18 5.58172 18 10ZM3.6 10C3.6 13.5346 6.46538 16.4 10 16.4C13.5346 16.4 16.4 13.5346 16.4 10C16.4 6.46538 13.5346 3.6 10 3.6C6.46538 3.6 3.6 6.46538 3.6 10Z" fill="#E5E5E5" />
          <circle class="origin-center -rotate-90 animate-[stroke-fill_5s_linear_forwards]" stroke="#141414" stroke-opacity="0.4" r="7.2" cx="10" cy="10" stroke-dasharray="43.9822971503" stroke-dashoffset="43.9822971503" />
        </svg>
      </div>
    </div>
  </template>
</div>
