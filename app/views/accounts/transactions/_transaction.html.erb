<div class="grid grid-cols-6 items-center text-gray-900 py-4 text-sm font-medium px-4">
  <div class="col-span-3">
    <%= render "transactions/name", transaction: transaction %>
  </div>

  <div class="col-span-2">
    <%= render "transactions/categories/menu", transaction: transaction %>
  </div>

  <%= content_tag :p,
                  format_money(transaction.amount_money),
                  class: ["col-span-1 ml-auto", "text-green-600": transaction.amount.negative?] %>
</div>
